<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="io" class="com.sg.flooringmastery.UserIO" />
    <bean id="orderFileDao" class="com.sg.flooringmastery.dao.OrderFileDao" />
    <bean id="auditFileDao" class="com.sg.flooringmastery.dao.AuditFileDao" />
    <bean id="exportFileDao" class="com.sg.flooringmastery.dao.ExportFileDao" />
    <bean id="productFileDao" class="com.sg.flooringmastery.dao.ProductFileDao" />
    <bean id="taxFileDao" class="com.sg.flooringmastery.dao.TaxFileDao" />
    <bean id="view" class="com.sg.flooringmastery.view.FlooringMasteryView">
        <constructor-arg ref="io" />
    </bean>
    <bean id="service" class="com.sg.flooringmastery.service.FlooringMasteryService">
        <constructor-arg ref="orderFileDao"/>
        <constructor-arg ref="auditFileDao" />
        <constructor-arg ref="exportFileDao" />
        <constructor-arg ref="productFileDao" />
        <constructor-arg ref="taxFileDao" />
    </bean>
    <bean id="controller" class="com.sg.flooringmastery.controller.FlooringMasteryController">
        <constructor-arg ref="view" />
        <constructor-arg ref="service" />
    </bean>
</beans>